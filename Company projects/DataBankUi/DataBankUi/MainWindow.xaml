<Window x:Class="DataBankUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WPFMwiWindowsCore.Controls;assembly=WPFMwiWindowsCore"
        xmlns:mdi="clr-namespace:WPF.MDI;assembly=WPF.MDI"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Title="DataBank" Height="530" Width="1050" MinHeight="530" MinWidth="1050" Icon="Images\hsbDataBank.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Expander Grid.Column="0" Grid.Row="1" ExpandDirection="Right" IsExpanded="True">
            
            <Expander.Header>
                <TextBlock Text="Databank Items" RenderTransformOrigin=".5,.5">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="lblFingerprints" Click="btnCreateFingerprintMainWindow_Click" Grid.Row="0" Margin="10,20,10,20" MinHeight="50" MinWidth="100" ToolTip="Hello world">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="Images\Fingerprint.png" Grid.Column="0" Height="40" Width="40"/>
                        <TextBlock Grid.Column="1" Margin="5" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run Text="Fingerprints"/>
                        </TextBlock>
                    </Grid>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Click="btnCreateFingerprintWindow_Click" Header="New">
                                <MenuItem.Icon>
                                    <Image Source="Images\Context menu icon 1.png"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem x:Name="btnAddItemToolbar" Click="btnAddFingerprintsButton_Click" Header="Add to favorites">
                                <MenuItem.Icon>
                                    <Image Source="Images\Context menu icon 2.png"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <Separator/>

                            <MenuItem Header="Windows..">
                                <MenuItem.Icon>
                                    <Image Source="Images\Windows.png"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <Label x:Name="lblLicensing" Grid.Row="1" Margin="10,20,10,20" MinHeight="50" MinWidth="100">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Source="Images\License.png" Grid.Column="0" Height="40" Width="40"/>
                        <TextBlock Grid.Column="1" Margin="5" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run Text="Licensing"/>
                        </TextBlock>
                    </Grid>
                    <Label.ContextMenu>
                        <ContextMenu x:Name="cmnLicensing">
                            <MenuItem Header="Create new licenses">
                                <MenuItem Header="New" Click="btnCreateNewLicenses_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 1.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Click="btnAddCreateNewLicensesButton_Click" Header="Add to favorites">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 2.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Windows..">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Windows.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem.Icon>
                                    <Image Source="Images\Add license.png"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem Header="Licenses administrator">
                                <MenuItem Header="New" Click="btnLicensesAdministrator_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 1.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Click="Add" Header="Add to favorites">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 2.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Windows..">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Windows.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem.Icon>
                                    <Image Source="Images\License administrator.png"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            
                            <MenuItem Header="Licenses">
                                <MenuItem Header="New" Click="btnLicenses_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 1.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Click="Add" Header="Add to favorites">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 2.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Windows..">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Windows.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem.Icon>
                                    <Image Source="Images\Licenses.png"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem Header="Licenses maintenance">
                                <MenuItem Header="New" Click="btnLicensesMaintenance_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 1.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Click="Add" Header="Add to favorites">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 2.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Windows..">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Windows.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem.Icon>
                                    <Image Source="Images\License maintenance.png"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Label.ContextMenu>
                </Label>

                <Label x:Name="lblPackages" Grid.Row="2"  Margin="10,20,10,20" MinHeight="50" MinWidth="100">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="Images\Package.png" Grid.Column="0" Height="40" Width="40"/>
                        <TextBlock Grid.Column="1" Margin="5" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run Text="Packages"/>
                        </TextBlock>
                    </Grid>
                    <Label.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Module package manager">
                                <MenuItem Header="New" Click="btnModulePackageManager_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 1.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Click="Add" Header="Add to favorites">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 2.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Windows..">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Windows.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem.Icon>
                                    <Image Source="Images\Package manager.png"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem Click="Add" Header="Customers office packages manager">
                                <MenuItem Header="New" Click="btnCostumerOfficePackagesManager_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 1.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Click="Add" Header="Add to favorites">
                                    <MenuItem.Icon>
                                        <Image Source="Images\Context menu icon 2.png"/>
                                    </MenuItem.Icon>
